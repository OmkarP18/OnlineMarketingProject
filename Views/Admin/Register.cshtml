@model onlinemarketing.Models.adminn

@{
    Layout = null;
}

<!DOCTYPE html>

<Doctype>
    <html>
    <head>
        <script>addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}</script>
        <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=devanagari,latin-ext"
              rel="stylesheet">

        <link href="~/Content/AddCat_Style/font-awesome.min.css" rel="stylesheet" />
        <link href="~/Content/AddCat_Style/style.css" rel="stylesheet" />
        <link href="~/Content/style.css" rel="stylesheet" />
    </head>

    <hr />
    <h2 style="text-align:center;color:green">Welcome to EShopping Zone.. Please register you account!</h2>
    <hr />


    @using (Html.BeginForm("Register", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <body>

            <div class="main-w3ls">
                <div class="left-content">
                    <div class="w3ls-content">
                        <!-- logo -->
                        <h1>
                            <a href="index.html"><span class="fa fa-magic"></span>Learning Innovation Academy</a>
                        </h1>
                        <!-- //logo -->
                        <h2>
                            Welcome to EShopping Zoneh2>
                            <a href="#" class="button-w3ls">
                                <span class="fa fa-long-arrow-right"></span>
                            </a>

                    </div>
                    <!-- copyright -->
                    <div class="copyright">
                        <p>
                            &copy;  2022 EShopping Zone. All rights reserved

                        </p>
                    </div>
                    <!-- //copyright -->
                </div>
                <div class="right-form-agile">
                    <!-- content -->
                    <div class="sub-main-w3">
                        <h3>User Registeration</h3>

                        <p></p>
                        <form action="#" method="post">

                            <div class="form-style-agile">
                                <div class="pom-agile">
                                    <span class="fa fa-user"></span>
                                    @Html.TextBoxFor(x => x.ad_name, new { @class = "form-control", @placeholder = "Admin Name" })
                                </div>
                            </div>
                            <span style="color:red">@Html.ValidationMessageFor(x => x.ad_name)</span>

                            <div class="form-style-agile">
                                <div class="pom-agile">
                                    <span class="fa fa-user"></span>
                                    @Html.PasswordFor(x => x.ad_password, new { @class = "form-control", @placeholder = "Password" })
                                </div>
                            </div>
                            <span style="color:red">@Html.ValidationMessageFor(x => x.ad_password)</span>


                            <input type="submit" value="Regsiter">
                        </form>
                        <!-- social icons -->
                        <!-- //social icons -->
                    </div>
                </div>
            </div>
            <!-- //content -->

        </body>
    }

</html>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts
    {


    @Scripts.Render("~/bundles/jqueryval")
}
