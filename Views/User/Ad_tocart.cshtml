@model onlinemarketing.Models.product
@{
    ViewBag.Title = "Ad_tocart";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@using (Html.BeginForm())
{


    <style>
        td {
            padding: 20px;
        }
    </style>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <img src="~/Content/img/ecommerce-2140603_960_720.jpg" class="img img-responsive" style="width:100%" />
        </div>
    </div>

    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:500PX; height:450PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.pro_description</p>
        </div>



        <h1>Price: @Model.pro_price</h1> 
        <h1>Name: @Model.pro_name </h1>
        <h1>Description by:@Model.pro_description</h1> 
        <input type="number" name="qty" value="0" id="qty" />
        <input type="submit" name="Submit" class="btn btn-danger" />

        
            <td colspan="2">
                @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_user_id_fk))
                {

                    @Html.ActionLink("Close this Ad", "Add_Delete", new { @class = "btn btn-danger", id = Model.pro_id })



                }
          



    </div>




    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
    </div>



}



